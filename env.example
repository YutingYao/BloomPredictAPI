# 蓝藻预测系统环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# API设置
API_TITLE=蓝藻预测系统API
API_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
DEBUG=true

# CORS设置（允许跨域的源地址）
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# 模型设置
MODEL_BASE_PATH=.
MAX_PREDICT_DAYS=30
MIN_PREDICT_DAYS=1

# 日志设置
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# 性能设置
PERFORMANCE_CACHE_HOURS=24
